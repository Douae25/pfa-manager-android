<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="8dp"
    app:cardCornerRadius="12dp"
    app:cardElevation="2dp"
    android:foreground="?android:attr/selectableItemBackground"
    android:clickable="true"
    android:focusable="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="16dp">

        <!-- Avatar avec initiales -->
        <TextView
            android:id="@+id/tvStudentInitials"
            android:layout_width="56dp"
            android:layout_height="56dp"
            android:background="@drawable/circle_background"
            android:backgroundTint="#1565C0"
            android:gravity="center"
            android:text="AB"
            android:textColor="#FFFFFF"
            android:textSize="20sp"
            android:textStyle="bold"/>

        <!-- Informations -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_marginStart="16dp"
            android:orientation="vertical">

            <!-- Nom complet -->
            <TextView
                android:id="@+id/tvStudentName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Ahmed Alami"
                android:textColor="#212121"
                android:textSize="16sp"
                android:textStyle="bold"/>

            <!-- Email -->
            <TextView
                android:id="@+id/tvStudentEmail"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="ahmed.alami@ensate.ma"
                android:textColor="#757575"
                android:textSize="13sp"
                android:layout_marginTop="2dp"/>

            <!-- Titre PFA -->
            <TextView
                android:id="@+id/tvPFATitle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Application mobile de gestion"
                android:textColor="#424242"
                android:textSize="14sp"
                android:maxLines="2"
                android:ellipsize="end"
                android:layout_marginTop="8dp"/>

            <!-- Badge Statut -->
            <TextView
                android:id="@+id/tvPFAStatus"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="EN COURS"
                android:textColor="#FFFFFF"
                android:textSize="11sp"
                android:textStyle="bold"
                android:background="@drawable/status_badge"
                android:backgroundTint="#2E7D32"
                android:paddingHorizontal="10dp"
                android:paddingVertical="4dp"
                android:layout_marginTop="8dp"/>
        </LinearLayout>

        <!-- Icône flèche -->
        <ImageView
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_gravity="center_vertical"
            android:src="@drawable/ic_chevron_right"
            app:tint="#BDBDBD"/>
    </LinearLayout>

</androidx.cardview.widget.CardView>