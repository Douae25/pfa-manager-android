<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F5F5F5">

    <!-- AppBar -->
    <com.google.android.material.appbar.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#FFFFFF"
        app:elevation="4dp">

        <androidx.appcompat.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="DÃ©tails Ã‰tudiant"
                android:textColor="#1A237E"
                android:textSize="18sp"
                android:textStyle="bold"/>
        </androidx.appcompat.widget.Toolbar>
    </com.google.android.material.appbar.AppBarLayout>

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_behavior="@string/appbar_scrolling_view_behavior">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

            <!-- Section Ã‰tudiant -->
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardBackgroundColor="#FFFFFF"
                app:cardCornerRadius="12dp"
                app:cardElevation="2dp"
                android:layout_marginBottom="16dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:padding="20dp">

                    <!-- Avatar avec initiales -->
                    <TextView
                        android:id="@+id/tvAvatar"
                        android:layout_width="64dp"
                        android:layout_height="64dp"
                        android:background="@drawable/avatar_background"
                        android:gravity="center"
                        android:text="AA"
                        android:textColor="#FFFFFF"
                        android:textSize="24sp"
                        android:textStyle="bold"/>

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:layout_marginStart="16dp"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/tvStudentName"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Ahmed Alami"
                            android:textColor="#212121"
                            android:textSize="20sp"
                            android:textStyle="bold"/>

                        <TextView
                            android:id="@+id/tvStudentEmail"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="ahmed.alami@ensate.ma"
                            android:textColor="#757575"
                            android:textSize="14sp"
                            android:layout_marginTop="4dp"
                            android:drawableStart="@drawable/ic_email"
                            android:drawablePadding="8dp"/>

                        <TextView
                            android:id="@+id/tvStudentPhone"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="0612345678"
                            android:textColor="#757575"
                            android:textSize="14sp"
                            android:layout_marginTop="4dp"
                            android:drawableStart="@drawable/ic_phone"
                            android:drawablePadding="8dp"/>
                    </LinearLayout>
                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <!-- Section Projet -->
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardBackgroundColor="#FFFFFF"
                app:cardCornerRadius="12dp"
                app:cardElevation="2dp"
                android:layout_marginBottom="16dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="20dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="ðŸ“„ Projet de Fin d'AnnÃ©e"
                        android:textColor="#1A237E"
                        android:textSize="16sp"
                        android:textStyle="bold"/>

                    <TextView
                        android:id="@+id/tvPfaTitle"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Application mobile de gestion..."
                        android:textColor="#212121"
                        android:textSize="16sp"
                        android:layout_marginTop="12dp"/>

                    <TextView
                        android:id="@+id/tvPfaDescription"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Description du projet..."
                        android:textColor="#757575"
                        android:textSize="14sp"
                        android:layout_marginTop="8dp"/>

                    <TextView
                        android:id="@+id/tvPfaStatus"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="En cours"
                        android:textColor="#FFFFFF"
                        android:background="@drawable/badge_status_in_progress"
                        android:paddingHorizontal="12dp"
                        android:paddingVertical="6dp"
                        android:textSize="12sp"
                        android:textStyle="bold"
                        android:layout_marginTop="12dp"/>
                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <!-- Section Convention -->
            <androidx.cardview.widget.CardView
                android:id="@+id/cardConvention"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardBackgroundColor="#FFFFFF"
                app:cardCornerRadius="12dp"
                app:cardElevation="2dp"
                android:layout_marginBottom="16dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="20dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="ðŸ¢ Convention de Stage"
                        android:textColor="#1A237E"
                        android:textSize="16sp"
                        android:textStyle="bold"/>

                    <LinearLayout
                        android:id="@+id/layoutConventionEmpty"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:layout_marginTop="12dp"
                        android:visibility="gone">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Aucune convention enregistrÃ©e"
                            android:textColor="#9E9E9E"
                            android:textSize="14sp"/>
                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/layoutConventionDetails"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:layout_marginTop="12dp"
                        android:visibility="gone">

                        <TextView
                            android:id="@+id/tvCompanyName"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="TechCorp Morocco"
                            android:textColor="#212121"
                            android:textSize="15sp"
                            android:textStyle="bold"/>

                        <TextView
                            android:id="@+id/tvCompanyAddress"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Casablanca, Maroc"
                            android:textColor="#757575"
                            android:textSize="14sp"
                            android:layout_marginTop="4dp"/>

                        <TextView
                            android:id="@+id/tvConventionStatus"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="âœ… ValidÃ©e"
                            android:textColor="#2E7D32"
                            android:textSize="14sp"
                            android:textStyle="bold"
                            android:layout_marginTop="8dp"/>
                    </LinearLayout>
                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <!-- Section Livrables -->
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardBackgroundColor="#FFFFFF"
                app:cardCornerRadius="12dp"
                app:cardElevation="2dp"
                android:layout_marginBottom="16dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="20dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="ðŸ“¦ Livrables"
                            android:textColor="#1A237E"
                            android:textSize="16sp"
                            android:textStyle="bold"/>

                        <TextView
                            android:id="@+id/tvDeliverablesCount"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="3"
                            android:textColor="#FFFFFF"
                            android:background="@drawable/badge_count"
                            android:paddingHorizontal="10dp"
                            android:paddingVertical="4dp"
                            android:textSize="12sp"
                            android:textStyle="bold"/>
                    </LinearLayout>

                    <androidx.recyclerview.widget.RecyclerView
                        android:id="@+id/recyclerDeliverables"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="12dp"
                        android:nestedScrollingEnabled="false"/>

                    <TextView
                        android:id="@+id/tvDeliverablesEmpty"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Aucun livrable soumis"
                        android:textColor="#9E9E9E"
                        android:textSize="14sp"
                        android:layout_marginTop="12dp"
                        android:visibility="gone"/>
                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <!-- Section Soutenance -->
            <androidx.cardview.widget.CardView
                android:id="@+id/cardSoutenance"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardBackgroundColor="#FFFFFF"
                app:cardCornerRadius="12dp"
                app:cardElevation="2dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="20dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="ðŸ“… Soutenance"
                        android:textColor="#1A237E"
                        android:textSize="16sp"
                        android:textStyle="bold"/>

                    <LinearLayout
                        android:id="@+id/layoutSoutenanceEmpty"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:layout_marginTop="12dp"
                        android:visibility="gone">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Pas encore planifiÃ©e"
                            android:textColor="#9E9E9E"
                            android:textSize="14sp"/>
                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/layoutSoutenanceDetails"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:layout_marginTop="12dp"
                        android:visibility="gone">

                        <TextView
                            android:id="@+id/tvSoutenanceDate"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="ðŸ“† 08 FÃ©vrier 2025"
                            android:textColor="#212121"
                            android:textSize="15sp"/>

                        <TextView
                            android:id="@+id/tvSoutenanceLocation"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="ðŸ“ Salle A101"
                            android:textColor="#757575"
                            android:textSize="14sp"
                            android:layout_marginTop="6dp"/>

                        <TextView
                            android:id="@+id/tvSoutenanceStatus"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="â³ PlanifiÃ©e"
                            android:textColor="#F57C00"
                            android:textSize="14sp"
                            android:textStyle="bold"
                            android:layout_marginTop="8dp"/>
                    </LinearLayout>
                </LinearLayout>
            </androidx.cardview.widget.CardView>

        </LinearLayout>
    </androidx.core.widget.NestedScrollView>

</androidx.coordinatorlayout.widget.CoordinatorLayout>