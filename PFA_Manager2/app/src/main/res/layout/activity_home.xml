<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="top|center_horizontal"
    android:padding="24dp"
    android:background="@android:color/white">

    <!-- Header with language toggle -->
    <include layout="@layout/view_lang_header" />

    <!-- Logo ENSA Tétouan -->
    <ImageView
        android:layout_width="220dp"
        android:layout_height="80dp"
        android:src="@drawable/logo_ensa"
        android:scaleType="fitCenter"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="64dp"
        android:contentDescription="Logo ENSA Tétouan" />

    <!-- Titre Principal -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/landing_title"
        android:textSize="40sp"
        android:textStyle="bold"
        android:textColor="#1976D2"
        android:layout_marginBottom="32dp" />

    <!-- Sous-titre -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/landing_subtitle"
        android:textSize="18sp"
        android:textColor="#666666"
        android:gravity="center"
        android:layout_marginBottom="6dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/landing_city"
        android:textSize="14sp"
        android:textColor="#666666"
        android:layout_marginBottom="120dp" />

    <!-- Description -->
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/landing_description"
        android:textSize="16sp"
        android:textColor="#333333"
        android:gravity="center"
        android:layout_marginBottom="50dp" />

    <!-- Bouton Connexion -->
    <Button
        android:id="@+id/btnGoToLogin"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:text="@string/landing_login"
        android:textSize="18sp"
        android:textStyle="bold"
        android:textColor="@android:color/white"
        android:backgroundTint="#1976D2"
        android:layout_marginBottom="16dp" />

    <!-- Push footer to bottom -->
    <Space
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1" />

    <!-- Footer -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/landing_footer"
        android:textSize="12sp"
        android:textColor="#999999"
        android:layout_marginTop="32dp" />

</LinearLayout>
