<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#F5F5F5">

    <!-- Header with back button -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="16dp"
        android:background="@android:color/white"
        android:elevation="4dp"
        android:gravity="center_vertical">

        <ImageView
            android:id="@+id/backArrow"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@drawable/ic_back_arrow"
            android:padding="8dp"
            android:clickable="true"
            android:focusable="true"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:contentDescription="Retour" />

        <TextView
            android:id="@+id/tvTitle"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="@string/upload_deliverables_before"
            android:textSize="20sp"
            android:textStyle="bold"
            android:textColor="#0D47A1"
            android:layout_marginStart="16dp" />
    </LinearLayout>

    <!-- Content -->
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/upload_deliverables_info"
                android:textSize="16sp"
                android:textColor="#666666"
                android:layout_marginBottom="24dp" />

            <!-- Rapport d'Avancement Section (Before Soutenance) -->
            <LinearLayout
                android:id="@+id/sectionRapportAvancement"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:visibility="gone"
                android:layout_marginBottom="20dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/deliverable_rapport_avancement"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:textColor="#0D47A1"
                    android:layout_marginBottom="12dp" />

                <!-- RecyclerView for multiple rapport d'avancement files -->
                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/recyclerViewRapportAvancement"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="12dp"
                    android:visibility="gone" />

                <TextView
                    android:id="@+id/tvEmptyRapportAvancement"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/no_files_added"
                    android:textColor="#999999"
                    android:textSize="14sp"
                    android:gravity="center"
                    android:layout_marginBottom="12dp" />

                <!-- Button Add Rapport d'Avancement -->
                <Button
                    android:id="@+id/btnAddRapportAvancement"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:text="@string/btn_add_file"
                    android:textSize="14sp"
                    android:textColor="@android:color/white"
                    android:backgroundTint="#FFA500" />
            </LinearLayout>

            <!-- PrÃ©sentation Section (Before Soutenance) -->
            <LinearLayout
                android:id="@+id/sectionPresentation"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:visibility="gone"
                android:layout_marginBottom="20dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/deliverable_presentation"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:textColor="#0D47A1"
                    android:layout_marginBottom="12dp" />

                <FrameLayout
                    android:id="@+id/presentationContainer"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="12dp">

                    <Button
                        android:id="@+id/btnAddPresentation"
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:text="@string/btn_add_file"
                        android:textSize="14sp"
                        android:textColor="@android:color/white"
                        android:backgroundTint="#FFA500" />

                    <TextView
                        android:id="@+id/tvPresentationName"
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:text="@string/no_file_selected"
                        android:textColor="#999999"
                        android:textSize="14sp"
                        android:gravity="center_vertical|start"
                        android:paddingStart="16dp"
                        android:paddingEnd="16dp"
                        android:visibility="gone"
                        android:background="@android:color/white" />
                </FrameLayout>

                <LinearLayout
                    android:id="@+id/presentationControls"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:visibility="gone"
                    android:gravity="end"
                    android:spacing="8dp">

                    <Button
                        android:id="@+id/btnRemovePresentation"
                        android:layout_width="wrap_content"
                        android:layout_height="40dp"
                        android:text="@string/btn_remove"
                        android:textSize="12sp"
                        android:textColor="@android:color/white"
                        android:backgroundTint="#D32F2F"
                        android:layout_marginEnd="8dp" />
                </LinearLayout>
            </LinearLayout>

            <!-- Rapport Final Section (After Soutenance) -->
            <LinearLayout
                android:id="@+id/sectionRapportFinal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:visibility="gone"
                android:layout_marginBottom="20dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/deliverable_rapport_final"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:textColor="#0D47A1"
                    android:layout_marginBottom="12dp" />

                <FrameLayout
                    android:id="@+id/rapportFinalContainer"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="12dp">

                    <Button
                        android:id="@+id/btnAddRapportFinal"
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:text="@string/btn_add_file"
                        android:textSize="14sp"
                        android:textColor="@android:color/white"
                        android:backgroundTint="#FFA500" />

                    <TextView
                        android:id="@+id/tvRapportFinalName"
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:text="@string/no_file_selected"
                        android:textColor="#999999"
                        android:textSize="14sp"
                        android:gravity="center_vertical|start"
                        android:paddingStart="16dp"
                        android:paddingEnd="16dp"
                        android:visibility="gone"
                        android:background="@android:color/white" />
                </FrameLayout>

                <LinearLayout
                    android:id="@+id/rapportFinalControls"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:visibility="gone"
                    android:gravity="end"
                    android:spacing="8dp">

                    <Button
                        android:id="@+id/btnRemoveRapportFinal"
                        android:layout_width="wrap_content"
                        android:layout_height="40dp"
                        android:text="@string/btn_remove"
                        android:textSize="12sp"
                        android:textColor="@android:color/white"
                        android:backgroundTint="#D32F2F"
                        android:layout_marginEnd="8dp" />
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
    </ScrollView>

    <!-- Bottom buttons -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp"
        android:background="@android:color/white"
        android:elevation="4dp">

        <!-- Button Upload All -->
        <Button
            android:id="@+id/btnUploadAll"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:text="@string/btn_upload_all"
            android:textSize="16sp"
            android:textColor="@android:color/white"
            android:backgroundTint="#1976D2" />
    </LinearLayout>

</LinearLayout>

