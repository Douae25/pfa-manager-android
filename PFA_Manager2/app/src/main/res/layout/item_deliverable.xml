<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/cardView"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="12dp"
    app:cardCornerRadius="16dp"
    app:cardElevation="2dp"
    app:strokeWidth="1dp"
    app:strokeColor="@color/divider">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical">

            <FrameLayout
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:background="@drawable/circle_background"
                android:backgroundTint="@color/primary_light">

                <ImageView
                    android:id="@+id/ivFileIcon"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:layout_gravity="center"
                    android:src="@drawable/ic_document"
                    app:tint="@color/primary"/>

            </FrameLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:layout_marginStart="12dp"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/tvFileTitle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Rapport de projet"
                    android:textColor="@color/text_primary"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:maxLines="2"
                    android:ellipsize="end"/>

                <TextView
                    android:id="@+id/tvPfaTitle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="4dp"
                    android:text="Titre du PFA"
                    android:textColor="@color/text_secondary"
                    android:textSize="13sp"
                    android:maxLines="1"
                    android:ellipsize="end"/>

            </LinearLayout>

            <com.google.android.material.chip.Chip
                android:id="@+id/chipType"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Avant"
                android:textSize="10sp"
                app:chipCornerRadius="12dp"
                app:chipMinHeight="24dp" />

        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginVertical="12dp"
            android:background="@color/divider"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_marginBottom="8dp">

            <TextView
                android:id="@+id/tvStudentInitials"
                android:layout_width="28dp"
                android:layout_height="28dp"
                android:background="@drawable/circle_background"
                android:backgroundTint="@color/text_secondary"
                android:gravity="center"
                android:text="AB"
                android:textColor="@color/white"
                android:textSize="11sp"
                android:textStyle="bold"/>

            <TextView
                android:id="@+id/tvStudentName"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:text="Ahmed Alami"
                android:textColor="@color/text_primary"
                android:textSize="14sp"/>

            <com.google.android.material.chip.Chip
                android:id="@+id/chipFileType"
                android:layout_width="wrap_content"
                android:layout_height="24dp"
                android:text="Rapport"
                android:textSize="10sp"
                app:chipMinHeight="20dp"
                app:chipCornerRadius="10dp"
                app:chipBackgroundColor="@color/background_light"
                android:visibility="gone"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical">

            <ImageView
                android:layout_width="16dp"
                android:layout_height="16dp"
                android:src="@drawable/ic_calendar"
                app:tint="@color/text_secondary"/>

            <TextView
                android:id="@+id/tvUploadDate"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:text="Soumis le 15 Jan 2025"
                android:textColor="@color/text_secondary"
                android:textSize="12sp"/>

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnOpen"
                style="@style/Widget.MaterialComponents.Button.TextButton"
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:text="Ouvrir"
                android:textSize="13sp"
                app:icon="@drawable/ic_chevron_right"
                app:iconGravity="end"
                app:iconSize="16dp"
                app:iconPadding="4dp"/>

        </LinearLayout>

    </LinearLayout>

</com.google.android.material.card.MaterialCardView>