<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="ma.ensate.pfa_manager">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.READ_MEDIA_IMAGES" />

    <application
        android:name=".PFAManagerApplication"
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.PFA_Manager"
        android:networkSecurityConfig="@xml/network_security_config"
        android:usesCleartextTraffic="true"
        tools:targetApi="31">

        <!-- HOME / MAIN -->
        <activity
            android:name=".view.HomeActivity"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity
            android:name=".view.MainActivity"
            android:exported="false" />

        <!-- ENCADRANT -->
        <activity
            android:name=".view.EncadrantDashboardActivity"
            android:exported="false" />

        <activity
            android:name=".view.StudentListActivity"
            android:exported="false"
            android:parentActivityName=".view.EncadrantDashboardActivity" />

        <activity
            android:name=".view.StudentDetailActivity"
            android:exported="false" />

        <activity
            android:name=".view.PlanningSoutenanceActivity"
            android:exported="false"
            android:parentActivityName=".view.EncadrantDashboardActivity" />

        <activity
            android:name=".view.EvaluationListActivity"
            android:exported="false"
            android:parentActivityName=".view.EncadrantDashboardActivity" />

        <activity
            android:name=".view.DeliverableListActivity"
            android:exported="false"
            android:parentActivityName=".view.EncadrantDashboardActivity" />

        <!-- ADMIN -->
        <activity
            android:name=".view.AdminActivity"
            android:exported="false" />

        <activity
            android:name=".view.ManageUsersActivity"
            android:exported="false" />

        <!-- CONVENTION -->
        <activity
            android:name=".view.ConventionListActivity"
            android:exported="false" />

        <activity
            android:name=".view.ConventionDetailActivity"
            android:exported="false" />

        <!-- ETUDIANT -->
        <activity
            android:name=".view.etudiant.StudentSpaceActivity"
            android:exported="false" />

        <activity
            android:name=".view.etudiant.ConventionRequestActivity"
            android:exported="false" />

        <activity
            android:name=".view.etudiant.UploadSignedConventionActivity"
            android:exported="false" />

        <activity
            android:name=".view.etudiant.UploadDeliverablesActivity"
            android:exported="false" />

        <activity
            android:name=".view.etudiant.ViewDeliverablesActivity"
            android:exported="false" />

        <!-- COORDINATEUR FILIERE -->
        <activity
            android:name=".view.coordinateur_filiere.CoordinatorDashboardActivity"
            android:exported="false" />

        <activity
            android:name=".view.coordinateur_filiere.ManageStudentsActivity"
            android:exported="false" />

        <activity
            android:name=".view.coordinateur_filiere.ManageProfessorsActivity"
            android:exported="false" />

        <activity
            android:name=".view.coordinateur_filiere.ManageAssignmentsActivity"
            android:exported="false" />

        <!-- FILE PROVIDER -->
        <provider
            android:name="androidx.core.content.FileProvider"
            android:authorities="${applicationId}.fileprovider"
            android:exported="false"
            android:grantUriPermissions="true">
            <meta-data
                android:name="android.support.FILE_PROVIDER_PATHS"
                android:resource="@xml/file_paths" />
        </provider>

    </application>

</manifest>